pipeline {
    agent { label 'agent1' }  

    tools {
        maven "M3"
    }
    environment {
        NEXUS_URL = "${NEXUS_URL}" 
        DOCKER_USERNAME = "${DOCKER_USERNAME}"
        DOCKER_PASSWORD = "${DOCKER_PASSWORD}"
        GITHUB_CREDENTIAL_ID = "${GITHUB_CREDENTIAL_ID}"
        VERSION = "${params.VERSION}"
        
    }
    stages {
        stage("Release and push to Nexus") {
            steps {
                withCredentials([usernamePassword(credentialsId: env.GITHUB_CREDENTIAL_ID, passwordVariable: 'pass', usernameVariable: 'user')]) {
                    sh "git pull"
                    sh "mvn release:clean"
                    sh "mvn release:prepare mvn-settings.xml -DreleaseVersion=${VERSION} -DdevelopmentVersion=${VERSION}-SNAPSHOT -Dtag=${VERSION} -Dusername=$user -Dpassword=$pass"
                    sh "mvn release:perform -Darguments=\"-Dmaven.javadoc.skip=true\""
                }
            }
        }
    }
    post {
        success {
            slackSend color: "good", message:"Build successful - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)"
        }
        failure {
            slackSend color: "danger", message:"Build failed  - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)"
        }
    }
}
